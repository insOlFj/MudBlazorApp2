@page "/"

<PageTitle>Index</PageTitle>

	<MudGrid Class="mt-0">

		@* Welcome message *@
		<MudItem xs="12" sm="6" md="6">
			<MudCard Elevation="0" Square="true" Style="border:solid;">
				<MudCardHeader Style="padding:5px; padding-left:10px; padding-right:10px; border-bottom:solid; border-bottom-width: 3px;  ">

					<CardHeaderContent>

						<MudText  Typo="Typo.h6" Align="Align.Left">Welcome to InsaConnect</MudText>

					</CardHeaderContent>

				</MudCardHeader>

				@* Welcome image *@
				<MudContainer Class="pa-0" Style="border-bottom:solid; border-bottom-width: 3px;">

					<MudCardMedia Image="images/Insatech-2.jpg" />

				</MudContainer>

				@* Said message *@
				<MudContainer Class="pa-4">
			
					<MudBlazorApp2.Pages.Content.WelcomeMessage />

				</MudContainer>


			</MudCard>
		</MudItem>

		@* News and updates *@
		<MudItem xs="12" sm="6" md="4">
			<MudCard Elevation="0" Square="true" Style="border:solid; height: 500px;">
				<MudCardHeader Style="padding:5px; padding-left:10px; border-bottom:solid; border-bottom-width: 3px; background-color: rgba(0, 150, 201, 0.2);">
					<CardHeaderContent>

						<MudText Typo="Typo.h6" Align="Align.Left">News</MudText>

					</CardHeaderContent>

				</MudCardHeader>

			</MudCard>
		</MudItem>

	</MudGrid>



